<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ctbu.mapper.EmployeeMapper">
    <select id="listEmployees" resultType="Employee" >
     select id,name,sex,birth,IDCard,telephone,address,dep,job,hiredate,email,salary
     from employee;
    </select>
    <insert id="insertEmployee" parameterType="Employee">
      insert into employee values (#{id},#{name},#{sex},#{birth},#{idCard},#{telephone},#{address},#{dep},#{job},#{hiredate},#{email},#{salary})
    </insert>
    <update id="updateEmployee" parameterType="Employee">
        update employee set name=#{name},sex=#{sex},birth=#{birth},idCard=#{idCard},telephone=#{telephone},address=#{address},dep=#{dep},job=#{job},hiredate=#{hiredate},email=#{email},salary=#{salary}
        where id=#{id};
    </update>
    <select id="getEmployeeById"  parameterType="java.lang.String" resultType="Employee">
        select id,name,sex,birth,IDCard,telephone,address,dep,job,hiredate,email,salary
        from employee where id=#{id};
    </select>
    <delete id="deleteEmployee"  parameterType="java.lang.String">
        delete from employee where id=#{id};
    </delete>
</mapper>